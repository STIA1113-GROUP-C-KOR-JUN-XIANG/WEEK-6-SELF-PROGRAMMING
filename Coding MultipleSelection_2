package SelfProgramming;
import java.util.Scanner;
public class MultipleSelection {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter your number of subject :");
		int numsub = sc.nextInt();//1-3
		if (numsub==3) {
			System.out.println("Enter your first subject name :");
			String subj1=sc.next();
			System.out.println("Enter your first subject mark :");
			int mark1=sc.nextInt();
			System.out.println("Enter your second subject name :");
			String subj2=sc.next();
			System.out.println("Enter your second subject mark :");
			int mark2=sc.nextInt();
			System.out.println("Enter your third subject name :");
			String subj3=sc.next();
			System.out.println("Enter your third subject mark :");
			int mark3=sc.nextInt();
			double average=(mark1+mark2+mark3)/3;
			System.out.println("Your average mark is :"+average);
		}else if(numsub==2) {
			System.out.println("Enter your first subject name :");
			String subj1=sc.next();
			System.out.println("Enter your first subject mark :");
			int mark1=sc.nextInt();
			System.out.println("Enter your second subject name :");
			String subj2=sc.next();
			System.out.println("Enter your second subject mark :");
			int mark2=sc.nextInt();
			double average=(mark1+mark2)/2;
			System.out.println("Your average mark is :"+average);
		}else if(numsub==1) {
			System.out.println("Enter your first subject name :");
			String subj1=sc.next();
			System.out.println("Enter your first subject mark :");
			int mark1=sc.nextInt();
			System.out.println("Your mark is :"+mark1);
		}else
			System.out.println("The maksimum subject is 3,re-enter again. ");
		
		
	
	}

}
